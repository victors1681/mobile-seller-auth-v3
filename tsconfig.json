{
    "compilerOptions": {
		  "jsx": "react", 
		  "module": "commonjs",
		  "noImplicitAny": false,
		  "removeComments": true,
		  "preserveConstEnums": true,
		  "esModuleInterop": true,
		"outDir": "./dist/",
		"stripInternal": true,
		"target": "es2017",
		"sourceMap": true, 
		"allowSyntheticDefaultImports": false,
		"baseUrl": ".",
		"checkJs": false,
		"paths": { 
			"components/*": ["src/components/*"],
			"layouts": ["src/layouts"],
			"hooks": ["src/hooks"],
			"contexts/*": ["src/contexts/*"],
			"common/*": ["src/common/*"],
			"utils/*": ["src/utils/*"],
			"assets/*": ["src/assets/*"],
			},
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
		"node_modules",
		"dist",
        "**/*.spec.ts"
	]
}