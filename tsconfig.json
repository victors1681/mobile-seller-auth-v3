{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "resolveJsonModule": true, 
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "jsx": "react",
        "noImplicitAny": false, 
        "sourceMap": true,
        "skipLibCheck": true, 
        "baseUrl": ".",
        "preserveConstEnums": true,
        "allowJs": true,
		"importHelpers": true,
		"paths": { 
			"components/*": ["components/*"],
			"layouts": ["layouts"],
            "hooks": ["hooks"],
            "hooks/*": ["hooks/*"],
			"contexts/*": ["contexts/*"],
			"common/*": ["common/*"],
			"utils/*": ["utils/*"],
			"assets/*": ["assets/*"],
			},
    },
    "files": ["./globals.d.ts"],
    "include": ["src/**/*.ts", "src/**/*.tsx"]
}