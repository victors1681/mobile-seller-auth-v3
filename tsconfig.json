{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true, 
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "jsx": "react",  
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "noImplicitAny": false, 
        "noImplicitThis": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "skipLibCheck": true, 
        "baseUrl": ".",
        "preserveConstEnums": true,
        "allowJs": true,
		"importHelpers": true,
		"paths": { 
            "root/*": ["src/*"],
			"components/*": ["src/components/*"],
			"layouts": ["src/layouts"],
            "hooks": ["src/hooks"],
            "hooks/*": ["src/hooks/*"],
			"contexts/*": ["src/contexts/*"],
            "common/*": ["src/common/*"],
            "common": ["src/common"],
			"utils/*": ["src/utils/*"],
			"assets/*": ["src/assets/*"],
			},
    },
    "files": ["./globals.d.ts"],
    "exclude": ["node_modules"], 
    "include": ["src"]
}