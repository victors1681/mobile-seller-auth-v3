{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": ["es6", "dom"],
        "resolveJsonModule": true, 
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "jsx": "react",
        "noImplicitAny": true, 
        "noImplicitThis": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "skipLibCheck": true, 
        "baseUrl": ".",
        "preserveConstEnums": true,
        "allowJs": true,
		"importHelpers": true,
		"paths": { 
            "root/*": ["src/*"],
			"components/*": ["src/components/*"],
			"layouts": ["src/layouts"],
            "hooks": ["src/hooks"],
            "hooks/*": ["src/hooks/*"],
			"contexts/*": ["src/contexts/*"],
			"common/*": ["src/common/*"],
			"utils/*": ["src/utils/*"],
			"assets/*": ["src/assets/*"],
			},
    },
    "files": ["./globals.d.ts"],
    "include": ["src/**/*.ts", "src/**/*.tsx"]
}