{
    "compilerOptions": {
		  "jsx": "react", 
		  "module": "commonjs",
		  "noImplicitAny": false,
		  "removeComments": true,
		  "preserveConstEnums": true,
		  "esModuleInterop": true,
		"outDir": "./dist/",
		"stripInternal": true,
		"target": "es2017",
		"sourceMap": true, 
		"allowSyntheticDefaultImports": false,
		"baseUrl": "./src",
		"checkJs": false,
		"paths": { 
			"components/*": ["components/*"],
			"layouts": ["layouts"],
			"hooks": ["hooks"],
			"contexts/*": ["contexts/*"],
			"common/*": ["common/*"],
			"utils/*": ["utils/*"],
			"assets/*": ["assets/*"],
			},
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
		"node_modules",
		"dist",
        "**/*.spec.ts"
	]
}